# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=adol_pos
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m
DB_MIGRATIONS_PATH=migrations

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-long-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h
JWT_ISSUER=adol-pos
JWT_AUDIENCE=adol-pos-api
JWT_INCLUDE_TENANT_CLAIMS=true

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_INCLUDE_TENANT_ID=true

# Tenant Configuration
TENANT_DEFAULT_TRIAL_DAYS=30
TENANT_MAX_PER_DOMAIN=1
TENANT_SLUG_MIN_LENGTH=3
TENANT_SLUG_MAX_LENGTH=63
TENANT_ALLOW_SUBDOMAINS=true
TENANT_REQUIRE_SSL=false

# Security Configuration
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_PASSWORD_REQUIRE_UPPER=true
SECURITY_PASSWORD_REQUIRE_LOWER=true
SECURITY_PASSWORD_REQUIRE_DIGIT=true
SECURITY_PASSWORD_REQUIRE_SYMBOL=false
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION=15m
SECURITY_SESSION_TIMEOUT=8h

# Feature Flags
FEATURE_ENABLE_MULTI_TENANCY=true
FEATURE_ENABLE_SUBSCRIPTIONS=true
FEATURE_ENABLE_USAGE_LIMITS=true
FEATURE_ENABLE_TRIAL_PERIODS=true
FEATURE_ENABLE_SUBDOMAINS=true
FEATURE_ENABLE_CUSTOM_DOMAINS=false
FEATURE_ENABLE_FEATURE_GATING=true